{
  "name": "nest-starter",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "yarn docker:start && nest start --watch --experimental-vm-modules",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm run docker:start:test && bash ./bin/bash/wait-db.sh && npm run db:migrate:test && dotenv -e .env.test -- jest --runInBand --config ./test/jest-e2e.json && npm run docker:stop:test",
    "docker:start": "docker compose up -d",
    "docker:start:test": "docker compose -f docker-compose-e2e-test.yml up -d",
    "docker:stop:test": "docker compose -f docker-compose-e2e-test.yml down",
    "db:reset": "dotenv -e .env -- ts-node src/database/scripts/reset-db.ts",
    "db:migrate:test": "dotenv -e .env.test -- drizzle-kit migrate && dotenv -e .env.test -- ts-node src/database/scripts/reset-db.ts "
  },
  "dependencies": {
    "@golevelup/ts-jest": "^0.7.0",
    "@keyv/redis": "^5.0.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^11.0.1",
    "cache-manager": "^7.0.1",
    "cacheable": "^1.10.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "drizzle-orm": "^0.44.3",
    "drizzle-seed": "^0.3.1",
    "fast-glob": "^3.3.3",
    "helmet": "^8.1.0",
    "keyv": "^5.4.0",
    "nanoid": "^3.3.11",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "remove": "^0.1.5",
    "rxjs": "^7.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/cache-manager-redis-store": "^2",
    "@types/eslint": "^9.6.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/dist/"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@modules/(.*)$": "<rootDir>/modules/$1",
      "^@database/(.*)$": "<rootDir>/database/$1",
      "^@controllers/(.*)$": "<rootDir>/controllers/$1",
      "^@services/(.*)$": "<rootDir>/services/$1",
      "^@core/(.*)$": "<rootDir>/core/$1",
      "^@config$": "<rootDir>/config/index",
      "^@config/(.*)$": "<rootDir>/config/$1"
    }
  }
}
